<UserControl x:Class="PKClub_Леготкин.Pages.Add.AddHall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PKClub_Леготкин.Pages.Add"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid Height="70" VerticalAlignment="Top" Background="Gray">
            <Image Stretch="UniformToFill" Margin="25,10,0,10" Height="50" Width="50" HorizontalAlignment="Left"/>
            <Label Content="Добавить Клуб" FontWeight="Bold" Foreground="White" VerticalContentAlignment="Center" FontSize="24" Margin="100,0,0,0" HorizontalAlignment="Left" Width="512"/>
            <Button Click="Back" Background="White" Width="125" Height="25" Content="Вернуться" Margin="0,15,14,30" HorizontalAlignment="Right"/>
        </Grid>
        <Grid Margin="0,70,0,0" Background="White">
            <Label Content="Укажите название клуба:" Margin="10,10,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216"/>
            <TextBox x:Name="tb_name" Margin="10,40,10,0" Height="25" VerticalAlignment="Top"/>
            <Label Content="Укажите адресс:" Margin="10,70,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216"/>
            <TextBox x:Name="tb_address" Margin="10,100,10,0" Height="26" VerticalAlignment="Top"/>
            <Label Content="Укажите время работы (XX:XX-XX:XX)" Margin="10,130,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216"/>
            <TextBox x:Name="tb_time" Margin="10,160,10,0" Text="00:00-00:00" Height="25" VerticalAlignment="Top"/>
            <Button x:Name="bthAdd" Click="Save" Background="White" Width="125" Content="Сохранить" Margin="0,0,10,15" HorizontalAlignment="Right" Height="25" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</UserControl>
